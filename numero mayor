#include <stdio.h>

int main() {
    // Write C code here
    int a;
    int b;
    int c;
    int resultado;
    
    printf("Escriba el primer número: ");
    scanf("%d", &a);
    
    printf("Escriba el segundo número: ");
    scanf("%d", &b);
    
    printf("Escriba el tercer número: ");
    scanf("%d", &c);
  
  resultado = a * b *c; 
  if(a * b * c){
    printf("el numero mayor es %d * %d * %d: %d\n", a, b, c, resultado);
}
    return 0;
}
